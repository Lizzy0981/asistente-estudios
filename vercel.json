{
    "version": 2,
    "builds": [
      {
        "src": "wsgi.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.11"
        }
      },
      {
        "src": "static/**",
        "use": "@vercel/static"
      },
      {
        "src": "*.html",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)\\.js",
        "dest": "/static/$1.js"
      },
      {
        "src": "/api/(.*)",
        "dest": "/wsgi.py"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ]
  }