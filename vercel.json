{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)\\.js",
            "dest": "/static/$1.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}